{% form 'cart', cart %}

    <h1>Cart</h1>

    {% if cart.empty? %}
        <p>Your Cart Is Empty</p>
    {% else %}
        {% for item in cart.items %}
            <div>
                <img src="{{ item.image | image_url }}" alt="" width="200" height="200" loading="eager" style="object-fit: cover"/>
                <h2>{{ item.title }}</h2>
                <p>{{ item.final_line_price | money }}</p>
                <input name="updates[]" value="{{ item.quantity }}">
                <a href="{{ item.url_to_remove }}">Remove</a>
            </div>
        {% endfor %}

        <hr />

        <p>Total: {{ cart.total_price | money }}</p>

        <button type="submit" name="update">
            Update
        </button>

        <button type="submit" name="checkout" style="margin-bottom: 100px">
            Checkout
        </button>

    {% endif %}

{% endform %}